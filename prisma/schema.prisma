datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  products    Product[]
}

model Product {
  id             Int             @id @default(autoincrement())
  name           String
  description    String?
  price          Float
  imageUrl       String
  available      Boolean         @default(true)
  categoryId     Int
  category       Category        @relation(fields: [categoryId], references: [id])
  specifications Specification[] // relation one-to-many
  createdAt      DateTime        @default(now())
}

model Specification {
  id        Int     @id @default(autoincrement())
  key       String  // ex : "Cadre", "Fourche", "Poids"
  value     String  // ex : "Aluminium a√©ronautique"
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}